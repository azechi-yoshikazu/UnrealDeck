<UserControl x:Name="WorkspacePaneControl" x:Class="DeckApp.UI.Pane.WorkspacePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeckApp.UI.Pane"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" BorderThickness="0" Background="#FF484848">
    <Grid x:Name="Grid" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="WorkspaceList"/>
        <Button x:Name="AddWorkspaceButton" Content="New..." Grid.Row="1" Click="OnAddWorkspaceButtonClicked" Margin="100,50"/>
    </Grid>
</UserControl>
